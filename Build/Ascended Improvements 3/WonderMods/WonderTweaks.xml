		</Update>
		<!--BUffed SISTINE CHAPEL culture from 1 to 3-->
		<Update>
			<Where BuildingType="BUILDING_SISTINE_CHAPEL" YieldType="YIELD_CULTURE"/>
			<Set Yield="3"/>
		</Update>

		
	</Building_YieldChanges>

