<GameData>
	<Buildings>
		<!-- Mausoleum Great person gold tweak-->
		<Update>
			<Where Type="BUILDING_MAUSOLEUM_HALICARNASSUS"/>
			<Set GreatPersonExpendGold="50"/>
		</Update>
		
		<!--Angkor wat culture acquire buffed from 25% to 50%-->
		<Update>
			<Where Type="BUILDING_ANGKOR_WAT"/>
			<Set GlobalPlotCultureCostModifier="-50" GlobalPlotBuyCostModifier="-33"/>
		</Update>
		<!--Pyramid worker modifier tweak-->
		<Update>
			<Where Type="BUILDING_PYRAMID"/>
			<Set WorkerSpeedModifier="20" Help="TXT_KEY_WONDER_PYRAMIDS_HELP"/>
		</Update>
		<Update>
			<!--chitzen itza uses taj mahal help for some reason-->
			<Where Type="BUILDING_CHICHEN_ITZA"/>
			<Set Help="TXT_KEY_WONDER_CHICHEN_ITZA_HELP"/>
		</Update>
		<Update>
			<!--taj mahal uses pyramid help for some reason-->
			<Where Type="BUILDING_TAJ_MAHAL"/>
			<Set Help="TXT_KEY_WONDER_TAJ_MAHAL_HELP"/>
		</Update>

		<!--added specialist SLOTS FOR key national wonders-->
		<Update>
			<Where Type="BUILDING_IRONWORKS"/>
			<Set SpecialistType="SPECIALIST_ENGINEER" SpecialistCount="3"/>
		</Update>

		<Update>
			<Where Type="BUILDING_NATIONAL_TREASURY"/>
			<Set SpecialistType="SPECIALIST_MERCHANT" SpecialistCount="3"/>
		</Update>

		<Update>
			<Where Type="BUILDING_NATIONAL_COLLEGE"/>
			<Set SpecialistType="SPECIALIST_SCIENTIST" SpecialistCount="3"/>
		</Update>
		

		<Update>
			<Where Type="BUILDING_NOTRE_DAME"/>
			<Set SpecialistType="SPECIALIST_ENGINEER"/>
		</Update>
		<!--pentagon is espionage reducer as well-->
		<Update>
			<Where Type="BUILDING_PENTAGON"/>
			<Set Espionage="1" EspionageModifier="-25"/>
		</Update>
		<!--Terracotta arnmy no longer gives isntant army, but increases unit buidling speed by 33%-->
		<Update>
			<Where Type="BUILDING_TERRACOTTA_ARMY"/>
			<Set InstantMilitaryIncrease="0"/>
		</Update>
		<!-- Alhambra Nerf-->
		<Update>
			<Where Type="BUILDING_ALHAMBRA"/>
			<Set TrainedFreePromotion="" FreePromotion="PROMOTION_DRILL_1"/>
		</Update>
		<Update>
			<Where Type="BUILDING_ALHAMBRA"/>
			<Set cost="300"/>
		</Update>
		
		<!--Mountain wonders mod-->
		<Update>
			<Where Type="BUILDING_MACHU_PICHU"/>
			<Set ArtDefineTag="ART_DEF_BUILDING_FORGE" 
				 DisplayPosition="0"
				 NearbyMountainRequired="0"/>
		</Update>

		<Update>
			<Where Type="BUILDING_NEUSCHWANSTEIN"/>
			<Set ArtDefineTag="ART_DEF_BUILDING_FORGE"
				 DisplayPosition="0"
				 NearbyMountainRequired="0"/>
		</Update>
		<!--heroic epic gives morale promo to any units built-->
		<Update>
			<Where Type="BUILDING_HEROIC_EPIC"/>
			<Set TrainedFreePromotion=""
				 FreePromotion="PROMOTION_MORALE"/>
		</Update>
		<!--buff from 10% to 15%-->
		<Update>
			<Where Type="BUILDING_CRISTO_REDENTOR"/>
			<Set PolicyCostModifier="-15"/>
		</Update>

		<Update>
			<Where Type="BUILDING_PETRA"/>
			<Set FreeBuildingThisCity="BUILDINGCLASS_CISTERN"/>
		</Update>
		
		
		<!--More artists from 2 to 3--><!--
		<Update>
			<Where Type="BUILDING_ARTISTS_GUILD"/>
			<Set SpecialistCount="3"/>
		</Update>
		<Update>
			<Where Type="BUILDING_WRITERS_GUILD"/>
			<Set SpecialistCount="3"/>
		</Update>
		<Update>
			<Where Type="BUILDING_MUSICIANS_GUILD"/>
			<Set SpecialistCount="3"/>
		</Update>-->
		
		
	</Buildings>
	<Building_FreeUnits>
		<!--Pyramid workers tweak-->
		<Update>
			<Where BuildingType="BUILDING_PYRAMID" UnitType="UNIT_WORKER"/>
			<Set NumUnits ="1"/>
		</Update>

		<Update>
			<Where BuildingType="BUILDING_BOROBUDUR" UnitType="UNIT_MISSIONARY"/>
			<Set NumUnits ="2"/>
		</Update>
	</Building_FreeUnits>
	<Building_YieldChanges>
		<!-- Stonehenge faith and culture change-->
		<Update>
			<Where BuildingType ="BUILDING_STONEHENGE" YieldType="YIELD_FAITH"/>
			<Set Yield ="3"/>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_HANGING_GARDEN" YieldType="YIELD_FOOD"/>
