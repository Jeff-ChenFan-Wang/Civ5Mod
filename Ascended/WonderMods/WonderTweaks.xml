<?xml version="1.0" encoding="utf-8"?>
<!-- Created by ModBuddy on 7/15/2018 4:00:42 PM -->
<GameData>
	<Buildings>
		<!-- Mausoleum Great person gold tweak-->
		<Update>
			<Where Type="BUILDING_MAUSOLEUM_HALICARNASSUS"/>
			<Set GreatPersonExpendGold="50"/>
		</Update>
		
		<!--Angkor wat culture acquire buffed from 25% to 50%-->
		<Update>
			<Where Type="BUILDING_ANGKOR_WAT"/>
			<Set GlobalPlotCultureCostModifier="-50" GlobalPlotBuyCostModifier="-33"/>
		</Update>
		<!--Pyramid worker modifier tweak-->
		<Update>
			<Where Type="BUILDING_PYRAMID"/>
			<Set WorkerSpeedModifier="20"/>
		</Update>

		<!--added specialist engineers-->
		<Update>
			<Where Type="BUILDING_IRONWORKS"/>
			<Set SpecialistType="SPECIALIST_ENGINEER" SpecialistCount="2"/>
		</Update>

		<Update>
			<Where Type="BUILDING_NOTRE_DAME"/>
			<Set SpecialistType="SPECIALIST_ENGINEER"/>
		</Update>
<!--pentagon is espionage reducer as well-->
		<Update>
			<Where Type="BUILDING_PENTAGON"/>
			<Set Espionage="1" EspionageModifier="-25"/>
		</Update>
<!--Terracotta arnmy no longer gives isntant army, but increases unit buidling speed by 33%-->
		<Update>
			<Where Type="BUILDING_TERRACOTTA_ARMY"/>
			<Set InstantMilitaryIncrease="0"/>
		</Update>
		
		<!--Mountain wonders mod-->
		<Update>
			<Where Type="BUILDING_MACHU_PICHU"/>
			<Set ArtDefineTag="ART_DEF_BUILDING_FORGE" 
				 DisplayPosition="0"
				 NearbyMountainRequired="0"/>
		</Update>

		<Update>
			<Where Type="BUILDING_NEUSCHWANSTEIN"/>
			<Set ArtDefineTag="ART_DEF_BUILDING_FORGE"
				 DisplayPosition="0"
				 NearbyMountainRequired="0"/>
		</Update>
		<!--heroic epic gives morale promo to any units built-->
		<Update>
			<Where Type="BUILDING_HEROIC_EPIC"/>
			<Set TrainedFreePromotion=""
				 FreePromotion="PROMOTION_MORALE"/>
		</Update>
		<!--buff from 10% to 15%-->
		<Update>
			<Where Type="BUILDING_CRISTO_REDENTOR"/>
			<Set PolicyCostModifier="-15"/>
		</Update>
	</Buildings>
	<Building_FreeUnits>
		<!--Pyramid workers tweak-->
		<Update>
			<Where BuildingType="BUILDING_PYRAMID" UnitType="UNIT_WORKER"/>
			<Set NumUnits ="1"/>
		</Update>

		<Update>
			<Where BuildingType="BUILDING_BOROBUDUR" UnitType="UNIT_MISSIONARY"/>
			<Set NumUnits ="2"/>
		</Update>
	</Building_FreeUnits>
	<Building_YieldChanges>
		<!-- Stonehenge faith and culture change-->
		<Update>
			<Where BuildingType ="BUILDING_STONEHENGE" YieldType="YIELD_FAITH"/>
			<Set Yield ="3"/>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_HANGING_GARDEN" YieldType="YIELD_FOOD"/>
			<Set Yield="5"/>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_TERRACOTTA_ARMY" YieldType="YIELD_CULTURE"/>
			<Set Yield="2"/>
		</Update>
		<!--Artemis gives more food instead of archery unit prod mod-->
		<Row>
			<BuildingType>BUILDING_TEMPLE_ARTEMIS</BuildingType>
			<YieldType>YIELD_FOOD</YieldType>
			<Yield>1</Yield>
		</Row>
	</Building_YieldChanges>

	<Building_ClassesNeededInCity>
		<!-- Remove barracks requirement for heroic epic-->
		<Delete BuildingType="BUILDING_HEROIC_EPIC"/>
	</Building_ClassesNeededInCity>
	
	<Building_PrereqBuildingClasses>
		<Delete BuildingType="BUILDING_HEROIC_EPIC"/>
	</Building_PrereqBuildingClasses>
	
	<Building_UnitCombatProductionModifiers>
		<Delete BuildingType ="BUILDING_TEMPLE_ARTEMIS"/>
	</Building_UnitCombatProductionModifiers>
	<Building_YieldModifiers>
		<Row>
			<BuildingType>BUILDING_HANGING_GARDEN</BuildingType>
			<YieldType>YIELD_FOOD</YieldType>
			<Yield>15</Yield>
		</Row>
	</Building_YieldModifiers>
	<Building_DomainProductionModifiers>
		<Row>
			<BuildingType>BUILDING_TERRACOTTA_ARMY</BuildingType>
			<DomainType>DOMAIN_LAND</DomainType>
			<Modifier>33</Modifier>
		</Row>
		<Row>
			<BuildingType>BUILDING_TERRACOTTA_ARMY</BuildingType>
			<DomainType>DOMAIN_SEA</DomainType>
			<Modifier>33</Modifier>
		</Row>
		<Row>
			<BuildingType>BUILDING_TERRACOTTA_ARMY</BuildingType>
			<DomainType>DOMAIN_AIR</DomainType>
			<Modifier>33</Modifier>
		</Row>
	</Building_DomainProductionModifiers>
	
	<Building_Flavors>
		<Update>
			<Where BuildingType="BUILDING_TEMPLE_ARTEMIS" FlavorType="FLAVOR_GROWTH"/>
			<Set Flavor="50"/>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_TEMPLE_ARTEMIS" FlavorType="FLAVOR_RANGED"/>
			<Set Flavor="0"/>
		</Update>

		<Update>
			<Where BuildingType="BUILDING_PYRAMID" FlavorType="FLAVOR_TILE_IMPROVEMENT"/>
			<Set Flavor="50"/>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_PYRAMID" FlavorType="FLAVOR_PRODUCTION"/>
			<Set Flavor="10"/>
		</Update>

		<Update>
			<Where BuildingType="BUILDING_GREAT_LIBRARY" FlavorType="FLAVOR_SCIENCE"/>
			<Set Flavor="80"/>
		</Update>

		<Update>
			<Where BuildingType="BUILDING_HANGING_GARDEN" FlavorType="FLAVOR_GROWTH"/>
			<Set Flavor="45"/>
		</Update>
	</Building_Flavors>

